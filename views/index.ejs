<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <title>Article Search</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
  <style>
    body { background: #f5f6fa; }
    .header-icon { font-size: 2rem; vertical-align: middle; color: #007aff; }
    .card-custom {
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(80, 80, 120, 0.06);
      background: #fff;
      padding: 2rem 1rem;
      max-width: 100vw;
      margin-left: auto;
      margin-right: auto;
    }
    .form-control:focus {
      border-color: #007aff;
      box-shadow: 0 0 0 0.2rem rgba(0,122,255,.1);
    }
    .btn-primary {
      background: linear-gradient(90deg,#007aff 0,#00c6fb 100%);
      border: none;
    }
    .table thead th {
      background: #007aff;
      color: #fff;
      border-top-left-radius: 8px;
      border-top-right-radius: 8px;
      font-weight: 700;
      letter-spacing: 0.05em;
    }
    .table td { vertical-align: middle; }
    .price-entry { font-weight: 500; color: #212529; margin-bottom: .5em; }
    .price-amount { color: #007aff; font-weight: bold; }
    .badge-edit-description,
    .badge-edit-price,
    .badge-edit-group,
    .badge-edit-enable,
    .badge-edit-class {
      background: transparent;
      border: none;
      padding: 0;
      margin-left: 5px;
      vertical-align: middle;
      cursor: pointer;
    }
    .badge-edit-description svg,
    .badge-edit-price svg,
    .badge-edit-group svg,
    .badge-edit-enable svg,
    .badge-edit-class svg { vertical-align: middle; }
    .logout-link {
      position: absolute;
      right: 32px;
      top: 24px;
      font-size: 1.1em;
      font-weight: 500;
      color: #007aff;
      text-decoration: none;
    }
    .logout-link:hover { text-decoration: underline; color: #0056b3; }
    .table-responsive {
      min-width: 1000px;
    }
    .enable-icon {
      font-size: 1.25em;
      font-weight: bold;
      vertical-align: middle;
      margin-right: 2px;
    }
    .enable-yes { color: #28a745; }
    .enable-no { color: #dc3545; }
    @media (max-width: 1400px) {
      .card-custom { max-width: 99vw; }
      .table-responsive { min-width: 700px; }
    }
    @media (max-width: 992px) {
      .card-custom { max-width: 100%; }
      .table-responsive { min-width: 0; }
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body>
  <a href="/logout" class="logout-link">Logout</a>
  <div class="row justify-content-center py-5">
    <div class="col-lg-12">
      <div class="card card-custom mb-3">
        <%- include('partials/ricerca', { code, description, externalCode, hierarchyLevels, hierarchyId }) %>
        <%- include('partials/table', { results: (results || []), hierarchyId }) %>
      </div>
    </div>
  </div>

  <!-- MODALE QUERY PREZZI LARGA -->
  <div id="queryPrezziModal" class="modal" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.45); z-index:2000;">
    <div style="background:white; margin:5vh auto; padding:2em; max-width:1100px; min-width:900px; border-radius:16px; position:relative;">
      <h4>Query article price</h4>
      <div id="queryPrezziModalHeader"></div>
      <div class="table-responsive">
        <table class="table mt-3" style="font-size:1em;">
          <thead>
            <tr>
              <th>Hierarchy</th>
              <th>Price</th>
              <th>EffGroup</th>
              <th>Seq</th>
              <th>Level</th>
            </tr>
          </thead>
          <tbody id="queryPrezziTable"></tbody>
        </table>
      </div>
      <button id="closeQueryModal" class="btn btn-secondary mt-2" style="float:right;">Close</button>
    </div>
  </div>
  <!-- FINE MODAL -->

  <%- include('partials/modals') %>
  <%- include('partials/scripts', { hierarchyId }) %>
  <script>
    $(document).ready(function() {
      $('#hierarchy-select').select2({
        width: 'resolve',
        dropdownAutoWidth: true,
        placeholder: "Select a Hierarchy",
        allowClear: false,
        language: {
          inputTooShort: function () { return 'Type to search...'; },
          searching: function () { return 'Searching...'; },
          noResults: function () { return 'No results'; }
        }
      });

      $('#selectGroupCode').select2({
        dropdownParent: $('#modaleGroup'),
        width: 'resolve',
        dropdownAutoWidth: true,
        placeholder: "Select a new ArticleGroup",
        allowClear: false,
        minimumResultsForSearch: 0,
        language: {
          inputTooShort: function () { return 'Type to search...'; },
          searching: function () { return 'Searching...'; },
          noResults: function () { return 'No results'; }
        }
      });
    });
  </script>
</body>
</html>